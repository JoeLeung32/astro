{
  "astroAllowShorthand": false,
  "useTabs": true,
  "tabWidth": 4,
  "singleQuote": false,
  "trailingComma": "none",
  "semi": false,
  "printWidth": 100,
  "plugins": [
    "prettier-plugin-astro",
    "prettier-plugin-tailwindcss"
  ],
  "overrides": [
    {
      "files": [
        "**/*.css",
        "**/*.scss",
        "**/*.html",
        "**/*.astro"
      ],
      "options": {
        "parser": "astro",
        "singleQuote": false
      }
    }
  ]
}
