---
import { Icon } from "astro-icon/components"
const { item: { title, child, href, target } } = Astro.props
const hadChild = !(typeof child === "undefined" || child.length === 0)
---
<div class="section-item flex flex-wrap justify-between items-center cursor-pointer">
	<a href={href} target={target} class="section-item-name flex-grow">{title}</>
	{hadChild &&
		<Icon name="mdi:chevron-right" size={24} />}
</div>
